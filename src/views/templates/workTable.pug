section.main__sectionCards__work
    h2.main__title Trabajos Realizados
    div.container__descriptionWork
        span.iconWork
        h3.card__titleWork Descripcion
        div.container__card__work
        each works in work
            div.card__work
                div.card__work__grid
                    p(class="client")= `${works.client}`
                    p(class="price")= `${works.price}$`
                    p(class="descri")= `${works.description}`
        div.formWork
            form(action=`/jobs/${value.id}`, method="post" class="formJobs") 

                label(for="client") Cliente: 
                input(type="text" name="client" placeholder=`cliente` id="client") 
                                    
                label(for="price" class="labelNumber") Precio: 
                input(type="number" class="inputNumber" id="price" name="price" placeholder="Precio")

                label(for="description") tipo de trabajo: 
                input(type="text" name="description" placeholder=`descripcion` id="description") 
                
                div(class="containSubmitJob")
                    button(type="submit" class="inputSubmit") Trabajar